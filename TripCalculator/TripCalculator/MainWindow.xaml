<Window x:Class="TripCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TripCalculator"
        mc:Ignorable="d"
        Title="Trip Calculator" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock FontSize="18" Margin="10" TextWrapping="Wrap" Grid.Row="0" VerticalAlignment="Center">Welcome to Trip Calculator! Please select from the following:</TextBlock>
        <Button VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0, 10, 75, 10" Grid.Row="1" Width="200" Command="{Binding StartNewTripCommand}">Start New Trip</Button>
        <Button VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0, 10, 75, 10" Grid.Row="2" Width="200" Command="{Binding LoadExistingTripCommand}">Load Existing Trip</Button>
    </Grid>
</Window>
